@model CreateProfileDTO

@{
    ViewData["Title"] = "CreateProfile";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Kişisel Bilgi Oluştur</h3>
<br />
<form method="post" enctype="multipart/form-data">
    <label>Ad Soyad</label>
    <input type="text" asp-for="FullName" class="form-control" />
    <span asp-validation-for="FullName" class="text-danger"></span>
    <br />
    <label>Ünvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>CV</label>
    <input type="file" name="cv" class="form-control" />
    <span asp-validation-for="CV" class="text-danger"></span>
    <br />
    <label>Video URL</label>
    <input type="text" asp-for="VideoURL" class="form-control" />
    <span asp-validation-for="VideoURL" class="text-danger"></span>
    <br />
    <label>Profil Resmi</label>
    <input type="file" name="image" class="form-control" />
    <span asp-validation-for="ImageURL" class="text-danger"></span>
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <input id="Status" asp-for="Status" type="checkbox" />
    <label for="Status">Durum</label>
    <br />
    <br />
    <button class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
</form>