@model ResultMessageDTO

@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Gelen Mesaj Detayı</h3>
<br />
<table class="table table-striped">
    <tr>
        <th>Ad Soyad :</th>
        <td>@Model.NameSurname</td>
    </tr>
    <tr>
        <th>Email :</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Konu :</th>
        <td>@Model.Subject</td>
    </tr>
    <tr>
        <th>Tarih :</th>
        <td>@Model.CreatedAt.ToString("g")</td>
    </tr>
    <tr>
        <th>Mesaj :</th>
        <td>@Model.Content</td>
    </tr>
</table>