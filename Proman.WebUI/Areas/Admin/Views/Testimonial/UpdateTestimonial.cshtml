@model UpdateTestimonialDTO

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Referans Güncelleme</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" asp-for="ID" disabled class="form-control" />
    <br />
    <label>Referans Adı</label>
    <input type="text" asp-for="TestimonialFullName" class="form-control" id="floatingInput" placeholder="Ad..." required />
    <br />
    <label>Referans Ünvanı</label>
    <input type="text" asp-for="TestimonialTitle" class="form-control" id="floatingInput" placeholder="Ünvan..." />
    <br />
    <label>Yorum</label>
    <textarea asp-for="TestimonialComment" rows="5" class="form-control" placeholder="Yorum..." required></textarea>
    <br />
    <label>Referans Görseli</label>
    <br />
    <img src="~/images/@Model.TestimonialImageURL" width="90" />
    <br />
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <br />
    <input id="Status" asp-for="Status" type="checkbox" />
    <label for="Status">Durum</label>
    <br />
    <br />
    <button class="btn btn-success"><i class="fas fa-save"></i> Referans Güncelle</button>
</form>