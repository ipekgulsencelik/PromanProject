@model ResultTestimonialDTO

@{
    ViewData["Title"] = "TestimonialDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Detayı</h3>
<br />
<table class="table table-striped">
    <tr>
        <th>Görsel :</th>
        <td><img src="~/images/@Model.TestimonialImageURL" width="150" /></td>
    </tr>
    <tr>
        <th>Ad Soyad :</th>
        <td>@Model.TestimonialFullName</td>
    </tr>
    <tr>
        <th>Ünvan :</th>
        <td>@Model.TestimonialTitle</td>
    </tr>
    <tr>
        <th>Tarih :</th>
        <td>@Model.CreatedAt.ToString("g")</td>
    </tr>
    <tr>
        <th>Yorum :</th>
        <td>@Model.TestimonialComment</td>
    </tr>
</table>