@model CreateServiceDTO

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Hizmet Girişi</h1>
<br />
<form method="post">
    <label>Başlık</label>
    <input type="text" asp-for="ServiceTitle" class="form-control" id="floatingInput" placeholder="Başlık..." required />
    <br />
    <label>Açıklama</label>
    <textarea asp-for="ServiceDescription" rows="5" class="form-control" placeholder="Açıklama..." required></textarea>
    <br />    
    <label>İkon</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" id="floatingInput" placeholder="İkon..." required />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="ServicePrice" class="form-control" id="floatingInput" placeholder="Fiyat..." required />
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <input id="Status" asp-for="Status" type="checkbox" />
    <label for="Status">Durum</label>
    <br />
    <br />
    <button class="btn btn-primary"><i class="fas fa-save"></i> Hizmet Ekle</button>
</form>